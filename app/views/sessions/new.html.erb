<div class="row">
  <div class="col-sm-6">
    <h1>Sign in</h1>

    <%= form_for :signin, method: "POST", role: "form" do |f| %>
  
    <div class="form-group">
      <%= f.label :username %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>
  
    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Sign in", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
 

  </div>
</div>